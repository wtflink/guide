{
  "name": "guide",
  "version": "1.0.0",
  "description": "A simple URL shortener which guide you toward the right way.",
  "main": "bin/start",
  "scripts": {
    "build": "npm run clean && babel src -d lib --ignore **/__tests__ --copy-files --extensions .ts",
    "clean": "rimraf lib",
    "dev": "cross-env NODE_ENV=development nodemon bin/start",
    "start": "node bin/start",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write **/*.{ts,js,md,json}",
    "typecheck": "tsc --noEmit",
    "format": "npm run typecheck && npm run prettier && npm run lint:fix",
    "migrate:make": "knex --knexfile src/knexfile migrate:make -x ts",
    "migrate:latest": "knex --knexfile src/knexfile migrate:latest",
    "migrate:rollback": "knex --knexfile src/knexfile migrate:rollback"
  },
  "author": "wtflink",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "dotenv": "^10.0.0",
    "ioredis": "^4.28.2",
    "joi": "^17.5.0",
    "knex": "^0.95.15",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-context-validator": "^1.0.0",
    "koa-pino-logger": "^4.0.0",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1",
    "pino": "^7.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.16.7",
    "@types/ioredis": "^4.28.7",
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-pino-logger": "^3.0.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa__router": "^8.0.11",
    "@types/mock-knex": "^0.4.3",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "mock-knex": "^0.4.10",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.3.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "tsconfig": {
          "types": [
            "jest"
          ]
        }
      }
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "14"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
